@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddHeading</h2>
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Heading Name");
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" });
        @Html.ValidationMessageFor(x => x.HeadingName);
        <br /><br />
        @Html.Label("kategori");
      @Html.DropDownListFor(x=>x.CatagoryID,(List<SelectListItem>)ViewBag.vlc,new { @class = "form-control" })
        <br /><br />
        @Html.Label("Yazar");
      @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.wlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID);
        <br />
        <button class="btn btn-info">save</button>
    </div>
}

