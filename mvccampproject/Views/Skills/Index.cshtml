@using EntityLayer.Concrete
@model List<Skill>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US">

<head>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Creative CV</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/css/aos.css?ver=1.1.0" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/css/bootstrap.min.css?ver=1.1.0" rel="stylesheet">
    <link href="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/css/main.css?ver=1.1.0" rel="stylesheet">
    <noscript>
        <style type="text/css">
            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }
        </style>
    </noscript>
</head>

<body id="top">
    <header>
    </header>
    <div class="page-content">
        <div>
            <div class="profile-page">
                <div class="wrapper">
                    <div class="page-header page-header-small" filter-color="green">
                        <div class="page-header-image" data-parallax="true"
                             style="background-image: url('/AdminLTE-3.0.4/creative-cv_free_1-1-0/images/cc-bg-1.jpg')"></div>
                        <div class="container">
                            <div class="content-center">
                                <div class="cc-profile-image">
                                    <a href="#">
                                        <img src="images/anthony.jpg" alt="Image" />
                                    </a>
                                </div>
                                <div class="h2 title">Qadir Allazov</div>
                                <p class="category text-white">Web Developer</p>
                            </div>
                        </div>
                        <div class="section">
                            <div class="container">
                                <div class="button-container">
                                    <a class="btn btn-default btn-round btn-lg btn-icon" href="#"
                                       rel="tooltip" title="Follow me on Facebook"><i class="fa fa-facebook"></i></a><a class="btn btn-default btn-round btn-lg btn-icon" href="#" rel="tooltip"
                                                                                                                        title="Follow me on Twitter"><i class="fa fa-twitter"></i></a><a class="btn btn-default btn-round btn-lg btn-icon" href="#" rel="tooltip"
                                                                                                                                                                                         title="Follow me on Google+"><i class="fa fa-google-plus"></i></a><a class="btn btn-default btn-round btn-lg btn-icon" href="#" rel="tooltip"
                                                                                                                                                                                                                                                              title="Follow me on Instagram"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section" id="about">
                <div class="container">
                    <div class="card" data-aos="fade-up" data-aos-offset="10">
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="card-body">
                                    <div class="h4 mt-0 title">About</div>
                                    <p>Hello! I am Qadir Allazov</p>
                                    <p>I study Computer Science in Azerbaijan Oil and Industry University. I am C# Developer.</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="card-body">
                                    <div class="h4 mt-0 title">Basic Information</div>
                                    <div class="row">
                                        <div class="col-sm-4"><strong class="text-uppercase">Age:</strong></div>
                                        <div class="col-sm-8">19</div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4"><strong class="text-uppercase">Email:</strong></div>
                                        <div class="col-sm-8">qedir.ellzv@gmail.com</div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4"><strong class="text-uppercase">Phone:</strong></div>
                                        <div class="col-sm-8">+994-55-808-19-49</div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-sm-4"><strong class="text-uppercase">Address:</strong></div>
                                        <div class="col-sm-8">Azerbaijan, Baku, Bakukhanov</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="section" id="skill">
                <div class="container">
                    <div class="h4 text-center mb-4 title">Professional Skills</div>
                    @foreach (var item in Model)
                    {
                        <div class="card" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="progress-container progress-primary">
                                            <span class="progress-badge">@item.SkillName</span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" data-aos="progress-full" data-aos-offset="10"
                                                     data-aos-duration="2000" role="progressbar" aria-valuenow="@item.SkillPoint" aria-valuemin="0"
                                                     aria-valuemax="100" style="width: @item.SkillPoint%;"></div> <span class="progress-value">@item.SkillPoint%</span>
                                            </div>
                                        </div>
                                    </div> <span>
                                        <a class="btn btn-danger" href="/Skills/Delete/@item.SkillID" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                                                 viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd"
                                                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>
                                    </span> <span>
                                        <a class="btn btn-warning" href="/Skills/EditSkills/@item.SkillID" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square"
                                                 viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                      d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                            </svg>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>




            <div class="section" id="experience">
                <div class="container cc-experience">
                    <div class="h4 text-center mb-4 title">Work Experience</div>
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="row">
                                <div class="col-md-3 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                                    <div class="card-body cc-experience-header">
                                      <p>@item.SkillName</p>
                                    </div>
                                </div>

                                <div class="col-md-9" data-aos="fade-left" data-aos-offset="50" data-aos-duration="500">
                                    <div class="card-body">

                                        <p>
                                            @item.SkillDetails
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div style="text-align:center">
            <button class="btn btn-primary"><a style="color:white" href="/Skills/NewSkills/">Add Skill</a></button>
        </div>
    </div>
    <footer class="footer">
        <div class="container text-center">
            <a class="cc-facebook btn btn-link" href="#">
                <i class="fa fa-facebook fa-2x "
                   aria-hidden="true"></i>
            </a><a class="cc-twitter btn btn-link " href="#">
                <i class="fa fa-twitter fa-2x "
                   aria-hidden="true"></i>
            </a><a class="cc-google-plus btn btn-link" href="#">
                <i class="fa fa-google-plus fa-2x"
                   aria-hidden="true"></i>
            </a><a class="cc-instagram btn btn-link" href="#">
                <i class="fa fa-instagram fa-2x "
                   aria-hidden="true"></i>
            </a>
        </div>
        <div class="h4 title text-center">Qadir Allazov</div>
    </footer>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/js/core/jquery.3.2.1.min.js?ver=1.1.0"></script>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/js/core/popper.min.js?ver=1.1.0"></script>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/js/core/bootstrap.min.js?ver=1.1.0"></script>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/js/now-ui-kit.js?ver=1.1.0"></script>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/js/aos.js?ver=1.1.0"></script>
    <script src="~/AdminLTE-3.0.4/creative-cv_free_1-1-0/scripts/main.js?ver=1.1.0"></script>
</body>
</html>